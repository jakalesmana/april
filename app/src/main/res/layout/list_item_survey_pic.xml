<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_rounded_white"
        android:layout_margin="3dp"
        android:elevation="3dp">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imgSurvey"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:sriv_border_width="0dp"
            app:sriv_left_bottom_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp" />

        <FrameLayout
            android:id="@+id/layoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_bottom_opacity_black"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/txtPicDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:padding="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layoutDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_rounded_opacity_black">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete_white"/>
        </FrameLayout>

    </FrameLayout>
</FrameLayout>